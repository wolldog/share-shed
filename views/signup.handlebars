<div class="row w-100 align-items-center">
  <div class="col-md-6">
    <img
      src="./images/ShareShedLogo__1_-removebg-preview.png"
      class="img-fluid"
      alt="logo"
    />

  </div>

  <div class="col-md-6 align-items-center">
    <div class="login-card w-100 m-auto">
      <h2 class="page-title">Join Share Shed</h2>
      <form class="form signup-form">
        <div class="form-group mb-3">
          <label for="first-name-signup" class="form-label">First Name:</label>
          <input class="form-input" type="text" id="first-name-signup" />
        </div>
        <div class="form-group mb-3">
          <label for="last-name-signup" class="form-label">Last Name:</label>
          <input class="form-input" type="text" id="last-name-signup" />
        </div>
        <div class="form-group mb-3">
          <label for="email-signup" class="form-label">Email:</label>
          <input class="form-input" type="text" id="email-signup" />
        </div>
        <div class="form-group mb-3">
          <label for="address-signup" class="form-label">Pick-up Address:
          </label>
          <input class="form-input" type="text" id="address-signup" />
        </div>
        <div class="form-group mb-3">
          <label for="password-signup" class="form-label">Password:</label>
          <input class="form-input" type="password" id="password-signup" />
        </div>
        <div class="form-group mb-3">
          <button class="btn btn-yellow w-100 mb-3" type="submit">Create Account</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="./js/signup.js"></script>